@model TimeSheet.Models.Hrs

@using (var modal = Html.Bootstrap().Begin(new Modal().Id("weekline").Closeable().FadeOff()))
{
    using (modal.BeginHeader())
    {
        <h4 id="modaltitle">Add Hours</h4>
    }

    using (var form = Html.Bootstrap().Begin(new Form("Save", "Home").Id("weeksheet").Type(FormType.Horizontal).LabelWidthS(4)))
    { 
        @Html.HiddenFor(m => m.DescriptionAdd)
        @Html.HiddenFor(m => m.CustomerAdd)
        @Html.HiddenFor(m => m.InternalNumberAdd)

        @Html.HiddenFor(m => m.WeekId)
        @Html.HiddenFor(m => m.oWeekId)
        @Html.HiddenFor(m => m.WeekNumber)
        @Html.HiddenFor(m => m.Year)

        @Html.HiddenFor(m => m.WorkerId);
    
        using (modal.BeginBody())
        {
            <div class="row">
                <div class="col-sm-6">
                    @form.FormGroup().DropDownListFor(m => m.PartnerId, Model.Partners).Size(InputSize.Small).Label().LabelText("Partner")
                    @form.FormGroup().DropDownListFor(m => m.SiteId, Model.Sites).Size(InputSize.Small).WidthLg(4).Label().LabelText("Site")
                    @form.FormGroup().DropDownListFor(m => m.TimeTypeId, Model.Times).Size(InputSize.Small).Class("nondemand").Label().LabelText("Type")
                    @form.FormGroup().DropDownListFor(m => m.CustomerId, Model.Customers).Size(InputSize.Small).Class("demand").Label().LabelText("Customer")
                    @form.FormGroup().CheckBoxFor(m => m.NewRequest).Class("demand")
                </div>
                <div class="col-sm-6">
                    @form.FormGroup().DropDownListFor(m => m.WorkAreaId, Model.WorkAreas).Size(InputSize.Small).Label().LabelText("Work Area")
                    @form.FormGroup().DropDownListFor(m => m.CostCenterId, Model.CostCenters).Class("demand").Size(InputSize.Small).Label().LabelText("Cost Center")
                    @form.FormGroup().DropDownListFor(m => m.InternalNumberId, Model.InternalNumbers).Class("demand").Size(InputSize.Small).Label().LabelText("Internal #")
                    @form.FormGroup().TextBoxFor(m => m.CapitalNumber).Size(InputSize.Small).Class("demand").Label().LabelText("Capital #")
                </div>
            </div>
            <div class="row">
                @form.FormGroup().DropDownListFor(m => m.DescriptionId, Model.Descriptions).Size(InputSize.Small).WidthLg(10).Label().WidthLg(2).LabelText("Description")
            </div>
            using (Html.Bootstrap().Begin(new Table().Condensed().Striped().Class("hourinput")))
            {
                <thead>
                    <tr class="weekline">
                        <th></th>
                        @Html.DisplayFor(m => m.Columns)
                        <th>Subtotal</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="hourline" id="normal">
                        <td class="hrsum">Normal</td>
                        <td>@form.FormGroup().TextBoxFor(m => m.nMon).Data(new { mask = "99:99" }).WidthLg(12).Label().Class("sr-only")</td>
                        <td>@form.FormGroup().TextBoxFor(m => m.nTue).Data(new { mask = "99:99" }).WidthLg(12).Label().Class("sr-only")</td>
                        <td>@form.FormGroup().TextBoxFor(m => m.nWed).Data(new { mask = "99:99" }).WidthLg(12).Label().Class("sr-only")</td>
                        <td>@form.FormGroup().TextBoxFor(m => m.nThu).Data(new { mask = "99:99" }).WidthLg(12).Label().Class("sr-only")</td>
                        <td>@form.FormGroup().TextBoxFor(m => m.nFri).Data(new { mask = "99:99" }).WidthLg(12).Label().Class("sr-only")</td>
                        <td>@form.FormGroup().TextBoxFor(m => m.nSat).Data(new { mask = "99:99" }).WidthLg(12).Label().Class("sr-only")</td>
                        <td>@form.FormGroup().TextBoxFor(m => m.nSun).Data(new { mask = "99:99" }).WidthLg(12).Label().Class("sr-only")</td>
                        <td id="hrsnormal" class="hrsum"></td>
                        <td class="hrwtotal"></td>
                    </tr>
                    <tr class="hourline" id="overtime">
                        <td class="hrsum">Overtime</td>
                        <td>@form.FormGroup().TextBoxFor(m => m.oMon).Data(new { mask = "99:99" }).WidthLg(12).Label().Class("sr-only")</td>
                        <td>@form.FormGroup().TextBoxFor(m => m.oTue).Data(new { mask = "99:99" }).WidthLg(12).Label().Class("sr-only")</td>
                        <td>@form.FormGroup().TextBoxFor(m => m.oWed).Data(new { mask = "99:99" }).WidthLg(12).Label().Class("sr-only")</td>
                        <td>@form.FormGroup().TextBoxFor(m => m.oThu).Data(new { mask = "99:99" }).WidthLg(12).Label().Class("sr-only")</td>
                        <td>@form.FormGroup().TextBoxFor(m => m.oFri).Data(new { mask = "99:99" }).WidthLg(12).Label().Class("sr-only")</td>
                        <td>@form.FormGroup().TextBoxFor(m => m.oSat).Data(new { mask = "99:99" }).WidthLg(12).Label().Class("sr-only")</td>
                        <td>@form.FormGroup().TextBoxFor(m => m.oSun).Data(new { mask = "99:99" }).WidthLg(12).Label().Class("sr-only")</td>
                        <td id="hrsovertime" class="hrsum"></td>
                        <td class="hrowtotal"></td>
                    </tr>                
                </tbody>
            }
            using (modal.BeginFooter())
            {
                @(form.FormGroup().CustomControls(
                Html.Bootstrap().SubmitButton().Text("Delete").Id("deletehrs").Style(ButtonStyle.Danger),
                Html.Bootstrap().SubmitButton().Text("Save").Id("savehrs").Style(ButtonStyle.Success),
                Html.Bootstrap().Button().Data(new { dismiss = "modal" }).Text("Cancel")))
            }
        }
    }
}
