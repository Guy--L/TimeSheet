@{
    var assembly = ViewContext.Controller.GetType().Assembly;
    bool impersonating;
    if (@Model != null && @Model.Impersonating == null) { 
        impersonating = false;
    }
    else
    {
        impersonating = @Model.Impersonating;
    }
        
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta charset="utf-8" />
    <meta http-equiv="cache-control" content="max-age=0" />
    <meta http-equiv="cache-control" content="no-cache" />
    <meta http-equiv="expires" content="0" />
    <meta http-equiv="expires" content="Tue, 01 Jan 1980 1:00:00 GMT" />
    <meta http-equiv="pragma" content="no-cache" />
    @*<meta name="viewport" content="width=device-width">*@
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/jqueryui")
    @Styles.Render("~/Content/bootstrap/base")
    @*@Styles.Render("~/Content/bootstrap/theme")*@
    @Styles.Render("~/Content/dataTables")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="page-container">
        <nav class="navbar navbar-fixed-top @(impersonating?" navbar-default":"navbar-inverse")" role="navigation">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("RDSS TimeSheet", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav">
                    @if (impersonating)
                    {
                        <li>@Html.ActionLink("Exit Impersonation", "Impersonate", "Admin", new { id = 0, @class = "text-warning" }, null)</li>
                    }
                    else
                    {
                        <li><a href="@Model.Reports" target="_blank">Reports</a></li>
                        if (@Model.IsAdmin)
                        {
                            <li>@Html.ActionLink("Export", "ExportXLS", "Admin")</li>
                            <li class="dropdown">
                                <a href="#" data-toggle="dropdown">Maintain <span class="caret"></span></a>
                                <ul class="dropdown-menu navbar-inverse">
                                    <li>@Html.ActionLink("Employees", "Personnel", "Admin")</li>
                                    <li>@Html.ActionLink("Internal Orders", "InternalNumbers", "Admin")</li>
                                    <li>@Html.ActionLink("Cost Centers", "CostCenters", "Admin")</li>
                                    <li>@Html.ActionLink("Work Areas", "WorkAreas", "Admin")</li>
                                    <li>@Html.ActionLink("Sites", "Sites", "Admin")</li>
                                    <li>@Html.ActionLink("Partners", "Partners", "Admin")</li>
                                    <li>@Html.ActionLink("Levels", "Levels", "Admin")</li>
                                </ul>
                            </li>
                        }
                        else if (@Model.IsManager)
                        {
                            <li>@Html.ActionLink("Employees", "Personnel", "Admin")</li>
                        }
                    }
                    <li><a href="#about">About</a></li>
                </ul>

                <ul class="nav navbar-nav pull-right">
                    <li><a href="#"><small>built @File.GetLastWriteTime(assembly.Location)</small></a></li>
                    <li><a href="#"><i class="icon-user icon-white"></i> @Model.User</a></li>
                    <li><a href="#"><i class="icon-question icon-white"></i></a></li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </nav>
        @*Width: <span class="widthnote"></span>, Size: <span class="visible-xs">XS</span><span class="visible-sm">SM</span><span class="visible-md">MD</span><span class="visible-lg">LG</span>*@
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/dataTables")

    @RenderSection("scripts", required: false)
    <script type="text/javascript">
        $.ajaxSetup({
            cache: false
        });
        function elog(msg) {
            var form = $('<form></form>');

            form.attr("method", "post");
            form.attr("action", '@Url.Action("Error", "Home", null, Request.Url.Scheme)');

            var field = $('<input></input>');

            field.attr("type", "hidden");
            field.attr("name", "errmsg");
            field.attr("value", msg);

            form.append(field);

            $(document.body).append(form);
            form.submit();
        }

        window.onerror = function (msg, url, line) {
            var errmsg = '(' + url + ': ' + line + ') ' + msg;
            errmsg = errmsg + ' in ' + arguments.callee.caller + ' < ' + arguments.callee.caller.caller;
            elog(errmsg);
            return true;
        }
    </script>
</body>
</html>
